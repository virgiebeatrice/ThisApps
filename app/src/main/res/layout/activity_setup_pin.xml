<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".SetupPinActivity">

    <!-- TextView untuk judul -->
    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your PIN"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:fontFamily="@font/urbanist_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp" />

    <!-- LinearLayout untuk EditText PIN -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView16">

        <!-- EditText PIN pertama -->
        <EditText
            android:id="@+id/pin1"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_box_background"
            android:gravity="center"
            android:hint="*"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp" />

        <!-- EditText PIN kedua -->
        <EditText
            android:id="@+id/pin2"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_box_background"
            android:gravity="center"
            android:hint="*"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp" />

        <!-- EditText PIN ketiga -->
        <EditText
            android:id="@+id/pin3"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_box_background"
            android:gravity="center"
            android:hint="*"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp" />

        <!-- EditText PIN keempat -->
        <EditText
            android:id="@+id/pin4"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_box_background"
            android:gravity="center"
            android:hint="*"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Button untuk submit PIN -->
    <Button
        android:id="@+id/submit_pin_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/urbanist_bold"
        android:text="Set PIN"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529" />

</androidx.constraintlayout.widget.ConstraintLayout>
