<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ThisApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Theme.ThisApp" parent="Base.Theme.ThisApp" />

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/dmsans</item> <!-- Gunakan font kustom -->
        <item name="android:textSize">15sp</item> <!-- Ukuran teks -->
        <item name="android:textColor">@color/darkGray</item> <!-- Warna teks -->
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
    <style name="CardBackground"><item name="android:background">@color/white</item></style>
    <style name="TextColor"><item name="android:textColor">@color/darkGray</item></style>
    <style name="ImageChange"><item name="android:src">@drawable/female</item></style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="fontFamily">@font/dmsans</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomCalendarTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:typeface">serif</item>
        <item name="fontFamily">@font/dmsans</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>